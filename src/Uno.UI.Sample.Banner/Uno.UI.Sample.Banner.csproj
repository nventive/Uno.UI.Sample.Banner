<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras/1.6.46">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;xamarinios10;monoandroid80;uap10.0.16299</TargetFrameworks>

		<!-- Ensures the .xr.xml files are generated in a proper layout folder -->
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup>
		<!-- Nuget Metadata -->
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Authors>nventive</Authors>
		<Company>nventive</Company>
		<Product>Uno Banner for Forked Projects</Product>
		<Description>
			This package is used to add a standard banner giving information about Uno.
			Used on projects forked by nventive to add Uno as target.
		</Description>
		<PackageIconUrl>https://nv-assets.azurewebsites.net/logos/uno.png</PackageIconUrl>
		<PackageProjectUrl>https://github.com/nventive/Uno.UI.Sample.Banner</PackageProjectUrl>
		<RepositoryUrl>https://github.com/nventive/Uno.UI.Sample.Banner.git</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<Copyright>Copyright (C) 2019 nventive inc. - all rights reserved</Copyright>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
		<DefineConstants>$(DefineConstants);__WASM__</DefineConstants>
	</PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)'=='xamarinios10' or '$(TargetFramework)'=='monoandroid80' or '$(TargetFramework)'=='netstandard2.0'">
		<PackageReference Include="Uno.UI" Version="1.45.0-dev.1338">
			<NoWarn>NU1701</NoWarn>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
		<Compile Update="**\*.xaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
	</ItemGroup>
</Project>